{
  "name": "froggy-house-website",
  "version": "1.0.0",
  "description": "The Froggy Family Website",
  "scripts": {
    "lint": "npm run lint:md && npm run lint:css && npm run lint:js",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore vendor",
    "lint:css": "stylelint 'assets/css/**/*.css'",
    "lint:js": "eslint 'assets/js/**/*.js'",
    "lint:fix": "npm run lint:md -- --fix && npm run lint:css -- --fix && npm run lint:js -- --fix",
    "build": "bundle exec jekyll build",
    "serve": "bundle exec jekyll serve --livereload",
    "test": "npm run lint && npm run build"
  },
  "devDependencies": {
    "markdownlint-cli": "^0.37.0",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/froggy-house/froggy-house.github.io.git"
  },
  "keywords": [
    "jekyll",
    "family",
    "blog",
    "website"
  ],
  "author": "The Froggy Family",
  "license": "MIT"
}